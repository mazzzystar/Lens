{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "0.0.2",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "https://openrouter.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["markdown.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/lens-16.png",
      "48": "icons/lens-48.png",
      "128": "icons/lens-128.png"
    }
  },
  "icons": {
    "16": "icons/lens-16.png",
    "48": "icons/lens-48.png",
    "128": "icons/lens-128.png"
  }
}
